<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的资料"
            android:textColor="#6ce0e0"
            android:textSize="25sp" />
    </LinearLayout>
    <include layout="@layout/include_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>
    <LinearLayout
        android:id="@+id/ll_my_touxianh"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@mipmap/myself_bg">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#807f7f"
            android:text="头像"
            android:textSize="25sp"
            android:id="@+id/textView" />

        <LinearLayout

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <FrameLayout

                android:id="@+id/fm_my_touxiang"
                android:layout_marginRight="15dp"
                android:layout_marginTop="12dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_my_touxiang"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/myself_touxiang_bg"
                    android:layout_gravity="right"/>
                <ImageView
                    android:id="@+id/iv_my_beijing"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/myself_touxiang"
                    android:layout_gravity="right"/>
            </FrameLayout>
        </LinearLayout>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jinru"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="vertical"
        android:background="#f2f2f2"></LinearLayout>
    <LinearLayout
        android:id="@+id/ll_my_xingming"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#807f7f"
            android:text="姓名"
            android:layout_gravity="center"
            android:textSize="25sp" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:src="@mipmap/blue_shuxian"/>
        <EditText
            android:id="@+id/et_my_name"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请选择您的姓名"
            />
        <ImageView
            android:id="@+id/iv_my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jinru"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="vertical"
        android:background="#f2f2f2"></LinearLayout>

    <LinearLayout
        android:id="@+id/ll_my_xingbie"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/tv_id_sex"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#807f7f"
            android:text="性别"
            android:layout_gravity="center"
            android:textSize="25sp" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:src="@mipmap/blue_shuxian"/>
        <RadioGroup
            android:gravity="center"
            android:id="@+id/rg_my_sex"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <RadioButton
                android:button="@null"
                android:id="@+id/nan"
                android:checked="true"
                android:background="@drawable/selector_roadio"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="#000000"
                android:textSize="15sp"/>
            <RadioButton
                android:button="@null"
                android:id="@+id/nv"
                android:layout_marginLeft="30dp"
                android:background="@drawable/selector_roadio"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textColor="#000000"
                android:textSize="15sp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="vertical"
        android:background="#f2f2f2"></LinearLayout>
    <LinearLayout
        android:id="@+id/ll_my_shouji"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#807f7f"
            android:text="手机"
            android:textSize="25sp" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:src="@mipmap/blue_shuxian"/>
        <TextView
            android:id="@+id/tvnum"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:gravity="right"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="18947893453"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jinru"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="vertical"
        android:background="#f2f2f2"></LinearLayout>
    <LinearLayout
        android:id="@+id/ll_my_diqu"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#807f7f"
            android:text="地区"
            android:textSize="25sp" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:src="@mipmap/blue_shuxian"/>
        <TextView
            android:id="@+id/tv_my_sheng"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:gravity="right"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="黑龙江"/>
        <TextView
            android:id="@+id/tv_my_shi"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:gravity="right"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="哈尔滨"/>
        <ImageView
            android:id="@+id/iv_my_diqu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jinru"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9e9999"></View>
    <Button
       android:id="@+id/ok"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/shape"/>
</LinearLayout>
