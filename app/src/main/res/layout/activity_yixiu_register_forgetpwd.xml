<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="忘记密码"
            android:textColor="#6ce0e0"
            android:textSize="25sp" />
    </LinearLayout>

    <include
        layout="@layout/include_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>
    <EditText
        android:maxLength="11"
        android:inputType="phone"
        android:id="@+id/et_forget_num"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="请输入手机号"
        android:textColorHint="#8c8a8a"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2cdcd"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <EditText
            android:inputType="phone"
            android:maxLength="4"
            android:padding="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColorHint="#8c8a8a"
            android:hint="请输入验证码"
            android:id="@+id/et_forget_yan" />

        <Button
            android:id="@+id/bt_forget_getyan"
            android:layout_marginRight="20dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="获取验证码"
            android:background="@drawable/shape_chengse"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2cdcd"></View>

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:background="@drawable/shape"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:id="@+id/bt_forget_next" />
</LinearLayout>
