<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fanhui"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="认证消息"
            android:textSize="25sp"
            android:textColor="#6ce0e0"
            android:gravity="center"
            />
    </LinearLayout>
    <include
        layout="@layout/include_line"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#f2f2f2">
        <TextView
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手持身份证认证"
            android:textColor="#f58207"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:background="@mipmap/beijng">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/xiangji"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正面"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="#02cccc"/>
        </LinearLayout>

       <LinearLayout
           android:id="@+id/ll_app_zheng"
           android:layout_width="match_parent"
           android:layout_height="110dp"
           android:orientation="horizontal">
           <LinearLayout
               android:id="@+id/ll_app_beijzheng"
               android:layout_marginLeft="150dp"
               android:gravity="center"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:background="#f2f2f2">
               <FrameLayout
                   android:id="@+id/fm_app_addzheng"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="#ffffff">
                   <ImageView

                       android:id="@+id/iv_1"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:src="@mipmap/baiyuan"/>
                   <ImageView
                       android:layout_gravity="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@mipmap/add_camera"/>
               </FrameLayout>
           </LinearLayout>
       </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="horizontal"
        android:background="#f2f2f2">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:background="@mipmap/beijng">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/xiangji"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="反面"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="#02cccc"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_app_fan"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_app_beijfan"
                android:layout_marginLeft="150dp"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#f2f2f2">
                <FrameLayout
                    android:id="@+id/fm_app_addfan"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff">
                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/baiyuan"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_camera"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_app_ok"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"/>



</LinearLayout>
